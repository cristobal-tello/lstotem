# functions/store_data/Dockerfile

# Use a specific, stable Python image
FROM python:3.9-slim

# Install necessary libraries for the function and for remote debugging
RUN pip install functions-framework google-cloud-firestore debugpy

# Set the working directory inside the container
WORKDIR /app

# Copy the requirements file and install additional dependencies (if any)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code (main.py)
COPY main.py .

# Expose the ports
EXPOSE 8080
EXPOSE 5678

# This is the corrected ENTRYPOINT. It's a single, unambiguous instruction.
ENTRYPOINT ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "--wait-for-client", \
            "-m", "functions_framework", "--target", "store_data", "--port", "8080"]
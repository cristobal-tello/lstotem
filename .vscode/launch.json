// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach to Cloud Function",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "justMyCode": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/functions/store_order_data",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}